# -*- mode: ruby -*-
# vi: set ft=ruby :

VAGRANTFILE_API_VERSION = "2"

Vagrant.configure(VAGRANTFILE_API_VERSION) do |config|
    config.vm.provider :libvirt do |libvirt|
        libvirt.driver = "kvm"
    end
    config.vm.box = "generic/ubuntu2004"
    config.vm.box_version = "3.1.16"

    config.vm.define "ubuntu20.04" do |ubuntu|
        ubuntu.vm.hostname = "ubuntu20.04"
    end

    config.vm.network "public_network", bridge: "public-subnet", ip: "172.0.10.201"

    config.vm.provision "file", source: "../localhost.env", destination: "/home/vagrant/localhost.env"
    config.vm.provision "file", source: "../certs", destination: "/home/vagrant/certs"
    config.vm.provision "file", source: "./consul.hcl", destination: "/home/vagrant/consul.hcl"
    config.vm.provision "file", source: "./nomad.hcl", destination: "/home/vagrant/nomad.hcl"
    config.vm.provision:shell, path: "setup.sh"
end